<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleText">
        <item name="android:textColor">@color/text_major</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="TitleText.Smaller">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyText">
        <item name="android:textColor">@color/text_major</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InfoText">
        <item name="android:textColor">@color/text_minor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintText">
        <item name="android:textColor">@color/text_minor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SectionText">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="ChoiceText">
        <item name="android:textColor">@color/text_major</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Scrollable">
        <item name="android:overScrollMode">never</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:background">@color/background</item>
    </style>

    <style name="AppBar.Transparent" parent="AppBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@color/background</item>
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">@style/TitleText</item>
        <item name="titleTextColor">@color/text_major</item>
    </style>

    <style name="Toolbar.WithBack" parent="Toolbar">
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>

    <style name="Toolbar.Transparent" parent="Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextColor">@color/text_major</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Toolbar.Transparent.WithBack" parent="Toolbar.Transparent">
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>
</resources>